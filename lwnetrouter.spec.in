Summary: Switcher Matrix Control System
Name: lwpath
Version: @VERSION@
Release: @RPM_RELEASE@%{?dist}
License: GPLv2
Packager: Fred Gleason <fredg@paravelsystems.com>
Group: Productivity/Multimedia/Other
Source: %{name}-@VERSION@.tar.gz
BuildRequires: qt-devel
BuildRoot: /var/tmp/%{name}-@VERSION@


%package panels
Summary: GUI control panels for LWPath
Group: Productivity/Multimedia/Other


%description
LWPath is a switch matrix control system intended for use in professional
broadcast environments.


%description panels
GUI control panels for use the LWPath.  These allow control of individual
crosspoint outputs by means of point-and-click interfaces.


%prep


%setup


%build
%configure
make


%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT/var/cache/aoip

%post
if test "@DISTRO@" = "suse" ; then
  PACKAGE_DOC_DIR=%_docdir/%{name}
fi
if test "@DISTRO@" = "redhat" ; then
  PACKAGE_DOC_DIR=%_docdir/%{name}-@VERSION@
fi
if test ! -f /etc/lwpath.conf ; then
    cp $PACKAGE_DOC_DIR/lwpath-sample.conf /etc/lwpath.conf
fi
if [ -x %{_bindir}/systemctl ] ; then
  systemctl daemon-reload
fi


%preun
if [ -x %{_bindir}/systemctl ] ; then
  systemctl stop lwpath
fi


%postun
if [ -x %{_bindir}/systemctl ] ; then
  systemctl daemon-reload
fi


%post panels
if test "@DISTRO@" = "suse" ; then
  PACKAGE_DOC_DIR=%_docdir/lwpath-panels
fi
if test "@DISTRO@" = "redhat" ; then
  PACKAGE_DOC_DIR=%_docdir/lwpath-panels-@VERSION@
fi
if test ! -f /etc/lwpanel.conf ; then
    cp $PACKAGE_DOC_DIR/lwpanel-sample.conf /etc/lwpanel.conf
fi
if [ -x %{_bindir}/gtk-update-icon-cache ] ; then
  %{_bindir}/gtk-update-icon-cache -f --quiet %{_datadir}/icons/hicolor || :
fi


%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root)
%{_sbindir}/lwpathd
%{_sbindir}/lwckmap
%{_sbindir}/lwmap
/etc/init.d/lwpathd
/usr/lib/systemd/system/lwpath.service
%{_mandir}/man8/lwckmap.8.gz
%{_mandir}/man8/lwmap.8.gz
%{_mandir}/man8/lwpathd.8.gz
%dir /var/cache/aoip
%doc AUTHORS
%doc ChangeLog
%doc COPYING 
%doc NEWS 
%doc README 
%doc conf/lwpathd_map-sample.dat
%doc conf/lwpath-sample.conf


%files panels
%{_bindir}/lwpanel
%{_bindir}/lwxypanel
%{_mandir}/man1/lwpanel.1.gz
%{_mandir}/man1/lwxypanel.1.gz
%{_datadir}/applications/lwpath-*.desktop
%{_datadir}/icons/hicolor/16x16/apps/lwpath.png
%{_datadir}/icons/hicolor/32x32/apps/lwpath.png
%{_datadir}/icons/hicolor/48x48/apps/lwpath.png
%doc conf/lwpanel-sample.conf

